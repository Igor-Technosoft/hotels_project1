package stepdefinition;

import cucumber.api.java.en.Given;
import cucumber.api.java.en.Then;
import cucumber.api.java.en.When;
import framework.The33AcrossHomePage;
import org.testng.Assert;

/**
 * Created by igorsandler on 5/11/18.
 */
public class Test33AcrossHomePageSD {
    private The33AcrossHomePage the33AcrossHomePage = new The33AcrossHomePage();

    @Given("^I'm on the 33Across.com home page$")
    public void amIOn33AcrossHomePage() {
        String expectedResults = "Publisher Landing Page";
        String actualResults = SharedSD.getDriver().getTitle();
        Assert.assertEquals(expectedResults, actualResults);
    }

    @When("^I see  33Across ad displayed on the left of the page and I click close button$")
    public void confirmAdDisplay() {
        the33AcrossHomePage.isTheAdDisplayed();
    }

    @Then("^I see the ad disappear from the screen$")
    public void confirmAdClosed() {
        the33AcrossHomePage.verifyAdClosed();
    }
}

